<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
	<div class="screen__toolbar">
			<a href="#profile" class="btn screen__toolbar__profile">Profile</a>
			<a href="/logout" class="btn screen__toolbar__logout">Logout</a>
	</div>
	<h2 class="screen__header">My Profile</h2>
	<ul class="screen__profile__info">
		<li>ID:<fest:space/><fest:value>json.id</fest:value></li>
		<li>LOGIN:<fest:space/><fest:value>json.login</fest:value></li>
		<li>EMAIL:<fest:space/><fest:value>json.email</fest:value></li>
		<li>SCORE:<fest:space/><fest:value>json.score</fest:value></li>
	</ul>
</fest:template>